@model Student

<table>
    <tr>
        <td width="200">ID</td><td>@Model.ID</td>
    </tr>
    <tr>
        <td width="200">Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td width="200">Surname</td>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <td width="200">Birth Date</td>
        <td>@Model.BirthDate.ToLongDateString()</td>
    </tr>
    <div>
        <a href="@Url.Action("Edit", "Student", new { id = Model.ID })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Delete", "Student", new { id = Model.ID })" class="btn btn-danger">Delete</a>
    </div>
</table>